<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/activity_padding"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_image"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="@dimen/item_image_size"
        android:layout_height="@dimen/item_image_size"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/subject_text"
            android:text="제목"
            android:textSize="@dimen/subject_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/place_text"
            android:text="장소"
            android:textSize="@dimen/place_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/price_text"
            android:text="가격"
            android:textSize="@dimen/price_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_gravity=""
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/commentIcon"
                android:src="@drawable/ic_chat"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:layout_width="@dimen/ic_small_image_size"
                android:layout_height="@dimen/ic_small_image_size"/>
            <TextView
                android:id="@+id/commentNumber"
                android:text="13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:layout_marginLeft="@dimen/basic_margin"
                android:src="@drawable/ic_heart"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:layout_width="@dimen/ic_small_image_size"
                android:layout_height="@dimen/ic_small_image_size"/>
            <TextView
                android:id="@+id/likeNumber"
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
